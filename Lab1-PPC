import java.io.BufferedWriter;
import java.io.OutputStreamWriter;
import java.io.IOException;
import java.lang.NumberFormatException;

public class Runner {
   static int getFactorial(int f) {
        int result = 1;
		if(f > 0){
			for (int i = 1; i <= f; i++){
				result = result * i;
			}
		}
        return result;
    }
  static double function(double var_x, int var_n){
        double y; 
        y = Math.pow(-1, var_n)*Math.pow(var_x, (2*var_n+1));
        y = y/getFactorial(2*var_n+1);
        return y;
    }
    public static void main(String args[]) {
        double x = Double.parseDouble(args[0]);
        double h = Double.parseDouble(args[1]);
        double left = Math.sin(x);
        double current = function(x,0);
        double right = 0;
        double previous = current;
        double e = h;
        for(int n = 1; Math.abs(e) >= h; n++){
			right+=current;
			previous = current;
			current = function(x,n);
			e = current - previous;
        }
        left = left - left % (h);
        right = right - right % (h);
	if(left==right) System.out.println(left + " = " + right);
        else System.out.println(left + " Not equal " + right);
    }
}
